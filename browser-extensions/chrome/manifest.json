{
    "manifest_version": 3,
    "name": "makeURL - URL Kısaltıcı",
    "version": "1.0",
    "description": "Herhangi bir sayfada hızlıca URL kısaltın. Güvenli ve hızlı.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://url-redirect-two.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "URL Kısalt",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
} 